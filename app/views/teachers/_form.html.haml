= simple_form_for @teacher do |f|
 
  = f.input :first_name
  = f.input :last_name
  = f.input :email
  = f.input :age
  = f.input :gender, as: :radio_buttons, collection: [["Male", "M"], ["Female", "F"]]
  
  .form-actions
    = f.submit (@teacher.new_record? ? "Create Teacher" : "Save Changes"), class: 'btn btn-success'  
    or
    = link_to "Cancel", teachers_path, class: 'btn btn-default'
 
